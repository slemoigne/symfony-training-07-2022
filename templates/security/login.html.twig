{% extends 'base.html.twig' %}

{% block author 'SensioTV' %}
{% block description 'Sign in to your SensioTV account to enjoy some cool stuffs.' %}

{% block og_image 'https://university.sensiolabs.com/images/sensiolabs-university-fullwhite.png' %}
{% block og_title 'Log In' %}
{% block og_description 'Sign in to your SensioTV account to enjoy some cool stuffs.' %}

{% block title 'Log In' %}

{% block body_attributes 'id="login"' %}
{% block main %}
    <section class="bg-light mt-5">
        <div class="container pb-5 pt-5">
            <div class="row align-items-center">
                <div class="col-lg-5">
                    <h1 class="font-weight-bold display-4 mt-5 ml-2 mb-5">Log in to your account.</h1>
                    <form class="form-signin" method="post">
                        {% if error %}
                            <div class="row">
                                <div class="col-12 m-2">
                                    <div class="alert alert-danger">{{ error.messageKey }}</div>
                                </div>
                            </div>
                        {% endif %}
                        <div class="row">
                            <div class="col-12 m-2">
                                <p>
                                    <small>
                                        <b>User fixtures:</b><br>
                                        User logs: junior@sensiotv.fr / junior<br>
                                        User logs: senior@sensiotv.fr / senior<br>
                                        Admin logs: admin@sensiotv.fr / admin<br>
                                        SuperAdmin logs: superadmin@sensiotv.fr / superadmin
                                    </small>
                                </p>
                            </div>
                            <div class="col-12 m-2">
                                <label for="inputEmail" class="sr-only">Email Address</label>
                                <input type="email" value="{{ last_username }}" name="email" id="inputEmail" class="form-control" placeholder="Email address" required autofocus>
                            </div>
                            <div class="col-12 m-2">
                                <label for="inputPassword" class="sr-only">Password</label>
                                <input type="password" name="password" id="inputPassword" class="form-control" placeholder="Password" required>
                            </div>
                            <input type="hidden" name="_csrf_token" value="{{ csrf_token('authenticate') }}">
                            <div class="col-12 m-2">
                                <div class="checkbox mb-4">
                                    <label for="remember_me" class="sr-only">Remember me</label>
                                    <input type="checkbox" id="remember_me" name="_remember_me" checked> Remember me
                                </div>
                            </div>
                            <div class="col-12 m-2">
                                <button class="btn btn-outline-dark btn-block" type="submit">Sign in</button>
                            </div>
                            <div class="col-12 m-2">
                                <p>
                                    <br>
                                    <a href="/registration" title="Create an account to SensioTV">Don't have an account ? Create one now. <i class="far fa-arrow-alt-circle-right"></i></a>
                                </p>
                            </div>
                        </div>
                    </form>
                </div>
                <div class="col-lg-5 offset-lg-2 text-center">
                    <img class="img-fluid img-rounded" src="{{ asset('build/images/sensiolabs-university-icon.png') }}" alt="SensioLabs University Logo">
                </div>
            </div>
        </div>
    </section>
{% endblock %}
