{% extends 'base.html.twig' %}

{% block title parent() ~ ' | Trailer Player' %}

{% block description %}
    Trailer Player.
{% endblock %}

{% block stylesheets %}
    <style>
        iframe{width:100%;height:100%;border:none}.iframe-container{position:absolute;width:100%;height:100%;top:0;left:0;bottom:0;right:0;display:flex;flex-direction:column;justify-content:center;align-items:center}
    </style>
{% endblock %}

{% block main %}
    <!-- Fake player -->
    <div class="iframe-container">
        <iframe src="http://www.youtube.com/embed/mbfNNHPrFvY?modestbranding=1&autoplay=1&mute=1&controls=1&fs=0&loop=1&rel=0&showinfo=0&disablekb=1" allow="autoplay; fullscreen"></iframe>
    </div>
{% endblock %}
